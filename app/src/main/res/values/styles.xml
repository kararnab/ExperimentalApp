<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorPrimary</item> //This is for progressbar
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorPrimary</item> //This is for progressbar
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="DarkTheme" parent="AppTheme">
        <item name="android:textColor">#dddddd</item>
        <item name="android:textColorHint">#c1c1c1</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">16sp</item>
        <item name="colorBackground">#000000</item>
        <item name="colorPrimaryText">#dddddd</item>
        <item name="colorSecondaryText">#c1c1c1</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">#ffe100</item>
        <item name="colorControlHighlight">#ffe100</item>
        <item name="colorPrimaryButton">#252525</item>
    </style>


</resources>
